{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "noEmit": false,
    "jsx": "react",
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["src/server/**/*", "src/types/**/*"],
  "exclude": ["src/client/**/*", "src/server/couch_views/**/*", "src/share/**/*"]
}
