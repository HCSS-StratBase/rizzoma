{
  "name": "rizzoma-modern",
  "version": "2.0.0",
  "description": "Rizzoma Collaboration Platform - Modernized",
  "main": "dist/server/app.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "node node_modules/concurrently/dist/bin/concurrently.js \"npm:dev:*\"",
    "dev:features": "echo 'Use FEAT_ALL=1 npm run dev instead'",
    "dev:server": "node --import tsx/esm --watch src/server/app.ts",
    "dev:client": "node node_modules/vite/bin/vite.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "node node_modules/typescript/bin/tsc -p tsconfig.server.json && node node_modules/tsc-alias/dist/index.js",
    "build:client": "node node_modules/vite/bin/vite.js build",
    "start": "node dist/server/app.js",
    "test": "node node_modules/vitest/vitest.mjs run --config vitest.config.ts",
    "test:watch": "node node_modules/vitest/vitest.mjs --config vitest.config.ts",
    "test:e2e": "node node_modules/cypress/bin/cypress run",
    "lint": "node node_modules/eslint/bin/eslint.js src --ext .ts,.tsx",
    "format": "node node_modules/prettier/bin/prettier.cjs --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "typecheck": "node node_modules/typescript/bin/tsc --noEmit",
    "migrate:coffee": "node scripts/migrate-coffee-to-ts.js",
    "prep:views": "mkdir -p src/server/couch_views && cp -r rizzoma/src/server/couch_views/* src/server/couch_views/",
    "deploy:views": "node scripts/deploy-views.js",
    "docker:dev": "docker-compose up -d",
    "docker:build": "docker build -t rizzoma:latest .",
    "start:all": "bash scripts/start-all.sh",
    "stop:all": "bash scripts/stop-all.sh",
    "restart:all": "npm run stop:all && npm run start:all",
    "logs": "docker compose logs -f",
    "logs:app": "docker compose logs -f app",
    "status": "docker compose ps && echo '\nAPI Health:' && curl -s http://localhost:8000/api/health || echo 'API not responding'",
    "test:toolbar-inline": "node test-toolbar-inline-smoke.mjs",
    "test:follow-green": "node test-follow-green-smoke.mjs",
    "test:health": "node node_modules/vitest/vitest.mjs run --config vitest.config.ts src/tests/server.health.test.ts src/tests/routes.comments.inlineHealth.test.ts src/tests/routes.uploads.edgecases.test.ts",
    "perf:harness": "node perf-harness.mjs",
    "perf:budget": "node scripts/perf-budget.mjs",
    "snapshots:pull": "bash scripts/fetch-latest-snapshots.sh",
    "lint:branch-context": "node scripts/check-branch-state.cjs"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.5",
    "@node-redis/client": "^1.0.0",
    "@node-saml/node-saml": "^5.1.0",
    "@tiptap/extension-highlight": "^2.27.2",
    "@tiptap/extension-link": "^2.27.2",
    "@tiptap/extension-mention": "^2.27.2",
    "@tiptap/extension-task-item": "^2.27.2",
    "@tiptap/extension-task-list": "^2.27.2",
    "@xmpp/client": "^0.13.6",
    "amqplib": "^0.10.5",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.0",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "emoji-picker-react": "^4.17.4",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.19.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "mailparser": "^3.9.3",
    "multer": "^1.4.5-lts.2",
    "nano": "^10.1.4",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.13",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "playwright": "^1.58.1",
    "redis": "^5.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^14.25.0",
    "tippy.js": "^6.3.7",
    "winston": "^3.17.0",
    "y-protocols": "^1.0.6",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@swc/core": "^1.15.11",
    "@tiptap/extension-collaboration": "^2.27.2",
    "@tiptap/react": "^2.27.2",
    "@tiptap/starter-kit": "^2.27.2",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.30",
    "@types/nodemailer": "^6.4.21",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^8.2.2",
    "decaffeinate": "^6.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^4.0.18",
    "yjs": "^13.6.27"
  },
  "optionalDependencies": {
    "@aws-sdk/client-s3": "^3.981.0",
    "@aws-sdk/s3-request-presigner": "^3.981.0",
    "@google-cloud/storage": "^7.18.0",
    "bcrypt": "^6.0.0",
    "cypress": "^13.17.0",
    "sharp": "^0.33.5"
  }
}
