{
  "name": "rizzoma-modern",
  "version": "2.0.0",
  "description": "Rizzoma Collaboration Platform - Modernized",
  "main": "dist/server/app.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "node node_modules/concurrently/dist/bin/concurrently.js \"npm:dev:*\"",
    "dev:server": "node node_modules/tsx/dist/cli.mjs watch src/server/app.ts",
    "dev:client": "node node_modules/vite/bin/vite.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "node node_modules/typescript/bin/tsc -p tsconfig.server.json && node node_modules/tsc-alias/dist/index.js",
    "build:client": "node node_modules/vite/bin/vite.js build",
    "start": "node dist/server/app.js",
    "test": "node node_modules/vitest/vitest.mjs run --config vitest.config.ts",
    "test:watch": "node node_modules/vitest/vitest.mjs --config vitest.config.ts",
    "test:e2e": "node node_modules/cypress/bin/cypress run",
    "lint": "node node_modules/eslint/bin/eslint.js src --ext .ts,.tsx",
    "format": "node node_modules/prettier/bin/prettier.cjs --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "typecheck": "node node_modules/typescript/bin/tsc --noEmit",
    "migrate:coffee": "node scripts/migrate-coffee-to-ts.js",
    "prep:views": "mkdir -p src/server/couch_views && cp -r rizzoma/src/server/couch_views/* src/server/couch_views/",
    "deploy:views": "node scripts/deploy-views.js",
    "docker:dev": "docker-compose up -d",
    "docker:build": "docker build -t rizzoma:latest ."
  },
  "dependencies": {
    "@node-redis/client": "^1.0.0",
    "@xmpp/client": "^0.13.1",
    "amqplib": "^0.10.3",
    "aws-sdk": "^2.1500.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.6.5",
    "mandrill-api": "^1.0.45",
    "multer": "^1.4.5-lts.1",
    "nano": "^10.1.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^4.6.11",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "stripe": "^14.9.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/core": "^1.3.100",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.2",
    "decaffeinate": "^6.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "@tiptap/react": "^2.5.10",
    "@tiptap/starter-kit": "^2.5.10",
    "@tiptap/extension-collaboration": "^2.5.10",
    "yjs": "^13.6.15",
    "vitest": "^1.6.1"
  },
  "optionalDependencies": {
    "@google-cloud/storage": "^7.7.0",
    "sharp": "^0.33.1",
    "bcrypt": "^5.1.1"
  }
}